<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/list_background"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_detail_step_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:gravity="left|start"
            />
        <!--android:background="@color/list_background"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/item_detail_travel_mode"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="left|start"
            android:layout_gravity="top"
            android:text="99"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/item_detail_duration"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:gravity="right|end"
            android:layout_gravity="right|end"
            android:text="1 hr 20 min"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id = "@+id/item_detail_instruction"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="left|start"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:layout_gravity="top"
        android:text="instruction"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_detail_transit_info"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/teal_300"
                android:gravity="left|start"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text=" From "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal"
                android:background="@color/text_reverse"
                android:id="@+id/item_detail_transit_departure_stop"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="departure_stop"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/teal_300"
                android:gravity="left|start"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text=" To "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal"
                android:background="@color/text_reverse"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/item_detail_transit_arrival_stop"
                android:text="arrival_stop"
                />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>