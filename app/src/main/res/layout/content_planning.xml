<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty_view"
        android:paddingLeft="40dp"
        android:paddingTop="@dimen/plan_action_bar_size"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ad_height"
        android:paddingTop="@dimen/plan_action_bar_size"
        android:id="@+id/fragment_planning_id"
        android:layout_height="wrap_content">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/departTextView"
    android:background="@color/colorPrimaryDark"
    android:textColor="@color/text_reverse"
    android:textSize="20sp"
    android:text="@string/init_depart_time"
    android:textAlignment="center" />
    <!--android:visibility="invisible"-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/routeListView"

        android:layout_centerHorizontal="true" />
    </LinearLayout>
</RelativeLayout>
