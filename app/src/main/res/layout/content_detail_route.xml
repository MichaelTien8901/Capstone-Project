<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/fragment_detail_route_id"
    tools:showIn="@layout/activity_detail_route">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/detail_map_id"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="com.ymsgsoft.michaeltien.hummingbird.DetailRouteFragment"
        />

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <!--departure time-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:id = "@+id/detail_depart_time"
                android:textColor="#f7fbff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="left"
                android:background="@color/list_background"
                android:layout_gravity="top"
                android:text="9:30 pm"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_background"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/list_detail_title"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    >
                    <ImageView
                        android:id="@+id/list_item_transit_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:tint="#ffffff"
                        android:src="@drawable/ic_directions_bus"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id = "@+id/detail_transit_no2"
                        android:textColor="#f7fbff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:background="@color/list_background"
                        android:layout_gravity="top"
                        android:text="99"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id = "@+id/detail_duration"
                    android:textColor="#f7fbff"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:background="@color/list_background"
                    android:layout_gravity="right"
                    android:text="1 hr 20 min"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list_detail_route"
            android:name="com.ymsgsoft.michaeltien.hummingbird.DetailRouteFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="@dimen/list_side_margin"
            android:paddingStart="@dimen/list_side_margin"
            android:paddingRight="@dimen/list_side_margin"
            android:paddingEnd="@dimen/list_side_margin"
            android:paddingTop="@dimen/list_side_margin"
            android:background="@color/list_background"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.ymsgsoft.michaeltien.hummingbird.DetailRouteFragment"
            tools:listitem="@layout/list_item_detail_route" />
    </LinearLayout>
</LinearLayout>