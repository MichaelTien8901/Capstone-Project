<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id = "@+id/list_item_depart_time"
        android:textColor="#f7fbff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="left"
        android:background="@color/list_background"
        android:layout_gravity="top"
        android:text="9:30 pm"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="@color/list_background"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id = "@+id/list_item_routes_container"
            >
            <ImageView
                android:id="@+id/list_item_route_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:tint="#ffffff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/list_item_transit_no"
                android:textColor="#f7fbff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="left"
                android:background="@color/list_background"
                android:layout_gravity="top"
                android:text="99"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/list_item_duration"
            android:textColor="#f7fbff"
            android:textSize="16sp"
            android:gravity="right"
            android:background="@color/list_background"
            android:layout_gravity="right"
            android:text="1 hr 20 min"/>

    </LinearLayout>
</LinearLayout>