<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id = "@+id/list_item_depart_time"
        android:textColor="#f7fbff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="left"
        android:background="#80000000"
        android:layout_gravity="top"
        android:text="9:30 pm"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id = "@+id/list_item_routes_container"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/list_item_image_Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/list_item_transit_no"
            android:textColor="#f7fbff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="left"
            android:background="#80000000"
            android:layout_gravity="top"
            android:text="99"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/list_item_duration"
            android:textColor="#f7fbff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="right"
            android:background="#80000000"
            android:layout_gravity="right"
            android:text="1 hr 20 min"/>

    </LinearLayout>
</LinearLayout>