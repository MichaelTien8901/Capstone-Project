<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id = "@+id/list_item_depart_time"
            android:textColor="#f7fbff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left|start"
            android:text="9:30 pm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/list_item_duration"
            android:textColor="#f7fbff"
            android:textSize="16sp"
            android:gravity="right|end"
            android:layout_gravity="right|end"
            android:text="1 hr 20 min"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/list_background"
        android:id = "@+id/list_item_routes_container"
        >
        <ImageView
            android:id="@+id/list_item_route_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:tint="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/list_item_transit_no"
            android:textColor="#f7fbff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="top"
            android:text="99"/>
    </LinearLayout>
</LinearLayout>